# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017/medical-assistant
MONGODB_DB_NAME=medical-assistant

# OpenSearch Configuration
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# LangSmith Configuration (Optional - for agent monitoring)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your-langsmith-api-key-here
LANGCHAIN_PROJECT=medical-assistant

# Security Configuration
JWT_SECRET=your-jwt-secret-here
JWT_PUBLIC_KEY=your-jwt-public-key-here
ENCRYPTION_KEY=your-aes-256-encryption-key-here

# Session Configuration
SESSION_TIMEOUT_MINUTES=15
